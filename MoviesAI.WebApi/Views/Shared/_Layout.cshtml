<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MoviePicker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #1a1a1a;
            color: #f8f9fa;
        }
        .navbar {
            background-color: #212529 !important;
            border-bottom: 1px solid #343a40;
        }
        .movie-card {
            background-color: #2c3034;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .auth-card {
            background-color: #2c3034;
            border-radius: 10px;
            padding: 30px;
            max-width: 500px;
            margin: 40px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .movie-poster {
            max-width: 100%;
            border-radius: 5px;
        }
        .btn-like {
            background-color: #28a745;
            border-color: #28a745;
        }
        .btn-dislike {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .movie-info {
            margin-bottom: 15px;
        }
        .info-label {
            color: #adb5bd;
            font-weight: bold;
        }
        .form-control {
            background-color: #343a40;
            border-color: #495057;
            color: #f8f9fa;
        }
        .form-control:focus {
            background-color: #343a40;
            color: #f8f9fa;
            border-color: #80bdff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">MoviePicker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav me-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/RateMovie">Подобрать Фильм</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/Favorites">Любимые фильмы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/Preferenes">Предпочтения</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Выход</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Авторизация</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Регистрация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-4">
    <main role="main">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>