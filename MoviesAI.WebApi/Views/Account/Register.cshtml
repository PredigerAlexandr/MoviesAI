@{
    ViewData["Title"] = "Регистрация";
}

@model RegisterModel

<div class="auth-card">
    <h2 class="text-center mb-4">Регистрация</h2>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label for="username" class="form-label">Имя пользователя</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name"/>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Фамилия пользователя</label>
            <input type="text" class="form-control" asp-for="Surname">
            <span asp-validation-for="Surname"/>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email">
            <span asp-validation-for="Email"/>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Пароль</label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password"/>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Подтверждение пароля</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
        <div class="text-center mt-3">
            <a href="/Auth/Login" class="text-decoration-none">Уже есть аккаунт? Войдите</a>
        </div>
    </form>
</div>